<Window x:Class="Project_Kalender.MailEingabe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Kalender"
        mc:Ignorable="d"
        Title="Mail Eingabe" Height="170" Width="300"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        MinHeight="170" MinWidth="300"
        MaxHeight="170" MaxWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock>Geben Sie Ihre Mail-Adresse ein:</TextBlock>
            <TextBox x:Name="tbMailAdress" Margin="0,10,0,0" TextChanged="tbMailAdress_TextChanged"></TextBox>
            <Button x:Name="btnSave" Width="70" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,15,0,0" Click="btnSave_Click" IsEnabled="False">Speichern</Button>
        </StackPanel>

    </Grid>
</Window>
